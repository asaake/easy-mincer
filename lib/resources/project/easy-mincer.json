{
  "port": 3000,
  "serverRoot": "/",
  "assets": {
    "contextRoot": "/assets",
    "paths": [
      "bower_components",
      "app/assets/javascripts",
      "app/assets/stylesheets",
      "app/assets/templates",
      "test/assets/javascripts",
      "test/assets/stylesheets",
      "test/assets/templates"
    ],
    "useSourceMaps": true
  },
  "public": {
    "contextRoot": "/",
    "paths": [
      "app/public/javascripts",
      "app/public/stylesheets",
      "app/public/templates"
    ]
  },
  "rewrite": {
    "paths": [
      {"/rewrite/**": "/public.html"}
    ],
    "ignorePaths": [
      "/assets/**"
    ]
  },
  "log": {
    "debug": false,
    "info": true,
    "warn": true,
    "error": true
  },
  "compile": {
    "paths": ["main.js", "main.css", "nest/main.js"]
  }
}